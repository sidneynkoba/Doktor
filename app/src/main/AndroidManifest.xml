<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thesidtech.doktor">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".FindDrugActivity"
            android:label="@string/search_Drug" />
        <activity android:name=".HealthServicesActivity"
            android:label="@string/search_Service" />
        <activity android:name=".ConsultationActivity"
            android:theme="@style/HideTitleAndBackgroundTheme"/>
        <activity android:name=".AppointmentActivity"
            android:label="@string/set_appointment"  />
        <activity android:name=".IntroActivity"
            android:theme="@style/HideTitleAndBackgroundTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:theme="@style/HideTitleAndBackgroundTheme"/>
    </application>

</manifest>